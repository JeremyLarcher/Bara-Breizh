{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Création de compte</h1>

    <div class="row m-5 justify-content-center form">
        <div class="col-md-5 border border-3 rounded form-container">

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm) }}
            {{ form_widget(registrationForm) }}
            <div class="m-5">

            <button type="submit" class="btn btn-lg btn-primary">Créer son compte</button>
            </div>

        {{ form_end(registrationForm) }}
        </div>
    </div>


{% endblock %}
